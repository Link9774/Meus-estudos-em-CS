Dictionary<string, List<int>> produto = new Dictionary<string, List<int>>();

produto.Add("Detergente", new List<int> { 5 });
produto.Add("Papel Aluminio", new List<int> { 12 });
produto.Add("Água sanitaria", new List<int> { 20 }); produto.Add("Luvas", new List<int> { 6 });
   
void Menu()
{
    Console.WriteLine("Digite 1 para adicionar um produto");
    Console.WriteLine("Digite 2 para mostrar todo o estoque");
    Console.WriteLine("Digite 3 para mostrar a quantidade dos itens");
    Console.WriteLine("Digite 0 para sair");

    Console.Write("\n Digite sua opção: ");
    string opcaoEscolhida = Console.ReadLine()!;
    int opcaoEscolhidaNum = int.Parse(opcaoEscolhida);
    switch (opcaoEscolhidaNum)
    {
        case 1:
            AdicionarProduto();
            break;
        case 2:
            MostrarProdutos();
            break;
        case 3:
            ProcurarItem();
            break;
        case 4:
            Atualizar();
            break;
        case 0:
            Console.WriteLine("Até um outro dia senhor.");
            break;
        default: Console.WriteLine("Opcão invalida, escolha uma opcção válida ");
            Menu();
            break;
    }   
}

void AdicionarProduto()
{
    Console.Clear();
    Console.Write("Digite o nome do produto que você deseja registrar: ");
    string nomeProduto = Console.ReadLine()!;
    int qtdProduto = int.Parse(Console.ReadLine()!);
    produto.Add(nomeProduto, new List<int> { qtdProduto });
    Console.WriteLine($"O produto {nomeProduto} foi adicionado");
    Console.WriteLine("\nAperte qualquer tecla para voltar ao menu");
    Console.ReadKey();
    Console.Clear();
    Menu();
}
void MostrarProdutos()
{
    Console.Clear();
    foreach (string produto in produto.Keys)
    {
        Console.WriteLine($"Produto: {produto}");
    }
    Console.WriteLine("\n Aperte qualquer tecla para voltar ao menu");
    Console.ReadKey();
    Console.Clear();
    Menu();
}

void ProcurarItem()
{
    Console.Clear();
    Console.WriteLine("Digite o produto q deseja saber a quantidade");

    string nomeProduto = Console.ReadLine()!;

    if (produto.ContainsKey(nomeProduto))
    {
        List<int> qtdProduto = produto[nomeProduto];
        int total = qtdProduto.Sum();

        Console.WriteLine($"\nProduto encontrado: {nomeProduto}");
        Console.WriteLine($"Quantidade em estoque: {total}");
    }else{
        Console.WriteLine($"\nProduto '{nomeProduto}' não encontrado");
        Thread.Sleep(3000);
        ProcurarItem();
    }
    Console.WriteLine("\nAperte qualquer tecla para voltar ao menu");
    Console.ReadKey();
    Menu();
}
void Atualizar()
{
    
}
Menu();
